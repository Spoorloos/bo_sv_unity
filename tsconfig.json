{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {"name": "next"},
        ],
        "paths": {
            "@/public/*": ["./public/*"],
            "@/components/*": ["./src/components/*"],
            "@/app/*": ["./src/app/*"],
        },
    },
    "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next-env.d.ts", "next.config.js", "postcss.config.js", "tailwind.config.js"],
    "exclude": ["node_modules"],
}
